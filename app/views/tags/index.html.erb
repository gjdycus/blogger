<h1>All Tags</h1>

<ul id="tags">
    <% @tags.each do |tag| %>
<li><%= link_to tag.name, tag_path(tag) %> <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Do you really want to delete tag '#{tag.name}'?"} %></li>
    <% end %>
</ul>

