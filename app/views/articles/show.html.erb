<h1><%= @article.title %></h1>
<p>
    Tags:
    <% @article.tags.each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %>
    <% end %>
</p>
<br />
<p><%= image_tag @article.image.url if @article.image.exists? %></p>
<br />
<p><%= @article.body %></p>

<br /><br />

<% if logged_in? %>
    <p><%= link_to "Edit", edit_article_path(@article) %></p>
    <p><%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"} %></p>
<% end %>
<h3>Comments(<%= @article.comments.count %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>

<br />

<%= render partial: 'comments/form' %>

<br />

<p><%= link_to "<< Back to List of Articles", articles_path %></p>